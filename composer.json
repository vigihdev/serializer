{
    "name": "vigihdev/serializer",
    "version": "1.0.1",
    "description": "A Symfony-inspired serializer library for PHP",
    "type": "library",
    "keywords": [
        "serializer",
        "json",
        "symfony",
        "data-transformer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/serializer": "^6.4",
        "symfony/property-access": "^6.4",
        "symfony/filesystem": "^6.4",
        "symfony/dotenv": "^6.4",
        "phpdocumentor/reflection-docblock": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Serializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "server": "php -S localhost:2177 server.php",
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}